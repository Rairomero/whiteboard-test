<h1>Est</h1>

<%= form_for @character do |form| %>
  <% @character.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
   <% end %>
  <%= form.hidden_field :user_id %>

  <%= render "#{@character.current_step}_step", form: form %>
 
  <p><%= form.submit "Continue" %></p>
  <p><%= form.submit "Back", :name => "back_button" unless @character.first_step? %></p>
<% end %>